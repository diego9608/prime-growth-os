{
  "name": "prime-growth-os",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:cuarzo": "cd apps/cuarzo && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "build:cuarzo": "cd apps/cuarzo && npm run build",
    "build": "npm run build:web && npm run build:cuarzo",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' + && find . -name 'out' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}